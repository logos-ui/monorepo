{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "outDir": "out",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
    },
    "exclude": [
        "./docs/*",
        "./examples/*",
        "./internals/*",
        "./scripts/*"
    ]
}